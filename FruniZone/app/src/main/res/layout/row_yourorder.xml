<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/llytMyOrders"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgCart"
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/e"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textSize="25dp"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/darkblue"
                        android:id="@+id/tvCartName"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_css"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MRP : "
                            android:textStyle="bold"
                            android:textSize="15sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:id="@+id/tvCartPrice"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_css"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity : "
                            android:textStyle="bold"
                            android:textSize="15sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:id="@+id/qty"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount: "
                            android:textStyle="bold"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tvTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:text="MRP. 200"
                            android:textColor="@color/darkblue"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/-"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_marginLeft="0dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel Order"
                        android:layout_marginTop="10dp"
                        android:textSize="18dp"
                        android:textColor="@color/red"/>

                </LinearLayout>

            </LinearLayout>

                <com.transferwise.sequencelayout.SequenceLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:id="@+id/tracker"
                    android:layout_height="wrap_content">

                    <com.transferwise.sequencelayout.SequenceStep
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/step1"
                        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"


                        app:title="Order Placed"/>

                    <com.transferwise.sequencelayout.SequenceStep
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/step2"
                        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"



                        app:title="Dispatched"/>

                    <com.transferwise.sequencelayout.SequenceStep
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/step3"
                        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"



                        app:title="Shipping"
                        />

                    <com.transferwise.sequencelayout.SequenceStep
                        android:layout_width="match_parent"
                        android:id="@+id/step4"
                        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"


                        android:layout_height="wrap_content"
                        app:title="Out for Delivery"/>

                    <com.transferwise.sequencelayout.SequenceStep
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/step5"
                        app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"


                        app:title="Delivered"
                        />
                </com.transferwise.sequencelayout.SequenceLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

