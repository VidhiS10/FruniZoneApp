<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ContactUsFragment"
    android:orientation="vertical">

<!--    <androidx.appcompat.widget.Toolbar-->
<!--        android:id="@+id/toolbar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="#162676"-->
<!--        app:title="ContactUs"-->
<!--        app:titleTextColor="@color/white"-->
<!--        app:navigationIcon="@drawable/baseline_arrow_back_24"-->
<!--        android:layout_marginBottom="10dp"/>-->

    <include layout="@layout/header"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey_font" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/contact_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get In Touch"
                android:textColor="@color/darkblue"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If You Have An Query Please Give Your Mobile Number And Email Id. We Will Contact You Soon"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:layout_gravity="center">
            </TextView>

            <EditText
                android:id="@+id/tvphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/edit_css_one"
                android:hint="Enter Mobile No."
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:padding="15dp"
                android:inputType="number"
                android:alpha="0.5"
                android:drawableLeft="@drawable/baseline_phone_iphone_24"/>

            <EditText
                android:id="@+id/tvemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/edit_css_one"
                android:hint=" Enter Email"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:padding="15dp"
                android:inputType="text"
                android:alpha="0.5"
                android:drawableLeft="@drawable/baseline_alternate_email_24"/>


            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/darkblue"
                android:text="Submit"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:inputType="text"
                android:layout_gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/font_awsome"
                android:layout_marginTop="20dp"
                android:textSize="28dp"
                android:text="Social Media"
                android:textColor="@color/darkblue"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/font_awsome"
                android:textSize="18sp"
                android:text="Connect With Us On Multiple Social Media Platform To Stay Updated"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/sinstagram"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="30dp"
                    android:src="@mipmap/facebook"/>

                <ImageView
                    android:id="@+id/sfacebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="30dp"
                    android:src="@mipmap/instagram"/>

                <ImageView
                    android:id="@+id/stwitter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="30dp"
                    android:src="@mipmap/logos"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>