<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">
    <include layout="@layout/header"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey_font" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Slider -->
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/sub_category_slider"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp"
                tools:ignore="MissingConstraints" />

            <!-- Color Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sub_colorimg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/color"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/sub_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+10 more colors"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Product Name -->
            <TextView
                android:id="@+id/sub_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 Seater Sofa In Light Pink Color"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <!-- Product Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="PRODUCT DETAILS :"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginBottom="15dp"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="@color/black"
                        android:layout_marginBottom="15dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Product Rating :"
                            android:textSize="15dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/Sub_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="5.0"
                            android:textSize="15dp"
                            android:clickable="true"
                            android:layout_marginStart="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Dimention :"
                            android:textSize="15dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/sub_dimention"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="H x 36 W 80 x D 34"
                            android:textSize="15dp"
                            android:clickable="true"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Warranty :"
                            android:textSize="15dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/sub_warranty"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="1 year"
                            android:textSize="15dp"
                            android:clickable="true"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Wieght :"
                            android:textSize="15dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/sub_wieght"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="45 kg"
                            android:textSize="15dp"
                            android:clickable="true"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Primary Material :"
                            android:textSize="15dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/sub_material"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="velvet fabric"
                            android:textSize="15dp"
                            android:clickable="true"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Sku :"
                            android:textSize="15dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/sub_sku"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="sku"
                            android:textSize="15dp"
                            android:clickable="true"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Description :"
                            android:textSize="15dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/sub_description"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Description"
                            android:textSize="15dp"
                            android:clickable="true"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Specification :"
                            android:textSize="15dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:id="@+id/sub_specification"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Specification"
                            android:textSize="15dp"
                            android:clickable="true"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Price and Add to Cart Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/coin_css">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save "
                    android:textSize="15dp"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

                <TextView
                    android:id="@+id/sub_saverupees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="save rupees"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ "
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/sub_rupees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_sub_cart"
            android:layout_width="150dp"
            android:text="Add to Cart"
            android:textColor="@color/white"
            android:backgroundTint="@color/darkblue"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="120dp"/>

    </LinearLayout>

</LinearLayout>
